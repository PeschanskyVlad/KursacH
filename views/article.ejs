<html lang="en">
<head>
  <meta charset="utf-8">

  <title><%=ar.aname%></title>
  <meta name="description" content="The HTML5 Herald">
  <meta name="author" content="SitePoint">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link href='/stylesheets/style.css' type="text/css" rel="stylesheet">

<script src="/javascripts/onstart.js"></script>

</head>

<body>
  <div>
        <div class="logblock" id="logb">


          <ul class="nav navbar-nav navbar-right">
            <% if (!user) { %>
                          <li><a href = '/register'><span class="glyphicon glyphicon-user"></span> Sign in</a></li>
                          <li><a href = '/login'><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                      <% } else { %>
                        <li><a href = '/logout' style="pointer-events: none;  cursor: default;  color: #000000;"><%= user.username%></a></li>
                        <li><a href = '/logout'><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                        <li><a href = '/user_profile'><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                      <% } %>
  </ul>

       </div>
     </div>

  <div>
       <div class="mainimage" id="log2">
           <img src='/images/books.png' width=150 height=110 alt="Books"/></br></br><br>
           <a href = '/'><p class="p1">Main page</p></a>

           <a href = '/articles'><p class="p1">Article list</p></a>
           <hr>
         <p class="p1">  Participation</p>

            <% if (!user) { %>
       <p class="p2">Login first.</p>
                      <% } else { %>
                          <a href = '/new_article'><p class="p2">Create article</p></a>
                          <a href = '/update_article<%=ar.address%>'><p class="p2">Update article</p></a>

                      <% } %>



                 <% if (user&&user.admin == true) { %>
                  <form  class="input-group" action= <%=ar.address%> method='POST'>
                    <input type="submit" value='Delete' />
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                  </form>
                   <%}%>


           Search:<br>

           <form action='/search' class="input-group" method='GET' id="search_form">
             <div class="input-group">
             <input type="text" placeholder="Search" class="form-control input-sm" name="search"  id="search">
               <div class="input-group-btn">
                 <button class="btn btn-default btn-sm" type="submit">
                   <i class="glyphicon glyphicon-search"></i>
                 </button>
                 </div>
               </div>
               <input type="hidden" name="_csrf" value="<%=csrfToken%>">

             </form>

       </div>

       <div class="profiletext" id="logb2">
         <p>
         <h2 align = center><%=ar.aname%></h2><br>
         <hr>

<div id="1"  class="col-lg-8">
  <div style = "">
  <%=ar.asummary%><br>
</div >
</div>

<div id="2" style = "text-align : center; " class="col-lg-4">
  <% if (ar.image) { %>
                <img src='data:image/jpg;base64,<%= ar.image %>' class="profileimage" width=200 height=240 alt="left" /><br>
            <% } else { %>
                <p>
                  <img src='/images/null.gif' class="profileimage"  width=120 height=120 alt="left" /><br>
                </p>
            <% } %>
</div>


        &nbsp<br>
